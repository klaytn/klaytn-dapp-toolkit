{
    "name": "solidity-template",
    "version": "1.0.0",
    "description": "A template for developing smart contract with solidity and hardhat.",
    "main": "index.js",
    "scripts": {
        "clean": "shx rm -rf ./artifacts ./cache ./coverage ./types ./coverage.json && npm run typechain",
        "coverage": "hardhat coverage --solcoverjs ./.solcoverjs --testfiles \"tests/*.ts\"",
        "deploy": "hardhat run scripts/deploy_all.ts",
        "format": "prettier --config .prettierrc . --write",
        "lint": "npm run format && npm run lint:sol && npm run lint:ts",
        "lint:sol": "./node_modules/.bin/solhint -f table contracts/**/*.sol --fix",
        "lint:ts": "eslint . --ext .ts --fix ",
        "log:clear": "hardhat remove-logs",
        "prepare": "husky install && husky add .husky/pre-commit \"npm run lint\"",
        "test": "hardhat test",
        "test:trace": "hardhat test --trace",
        "test:fulltrace": "hardhat test --fulltrace",
        "typechain": "hardhat typechain",
        "verify": "hardhat run scripts/verify.ts"
    },
    "repository": {
        "type": "git",
        "url": ""
    },
    "keywords": [
        "nft"
    ],
    "author": "ndtr2000",
    "license": "MIT",
    "bugs": {
        "url": ""
    },
    "homepage": "",
    "devDependencies": {
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.1",
        "@nomicfoundation/hardhat-ethers": "^3.0.4",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
        "@nomicfoundation/hardhat-toolbox": "^3.0.0",
        "@nomicfoundation/hardhat-verify": "^1.0.4",
        "@nomiclabs/hardhat-solhint": "^3.0.1",
        "@typechain/ethers-v6": "^0.4.0",
        "@typechain/hardhat": "^8.0.0",
        "@types/chai": "^4.3.5",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.4.2",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "chai": "^4.3.7",
        "dotenv": "^16.3.1",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "ethers": "^6.6.4",
        "hardhat": "^2.17.0",
        "hardhat-contract-sizer": "^2.10.0",
        "hardhat-docgen": "^1.3.0",
        "hardhat-gas-reporter": "^1.0.9",
        "hardhat-log-remover": "^2.0.2",
        "hardhat-tracer": "^2.5.1",
        "husky": "^8.0.3",
        "mocha": "10.2.0",
        "mocha-junit-reporter": "^2.2.1",
        "mocha-multi-reporters": "^1.5.1",
        "prettier": "^2.8.4",
        "prettier-plugin-solidity": "^1.1.3",
        "solhint": "^3.4.1",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.8.4",
        "truffle-assertions": "^0.9.2",
        "ts-node": "^10.9.1",
        "typechain": "^8.2.0",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "@openzeppelin/contracts": "4.9.2",
        "@openzeppelin/contracts-upgradeable": "4.9.2",
        "@openzeppelin/hardhat-upgrades": "^2.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    }
}
